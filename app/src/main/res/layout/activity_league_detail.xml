<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout style="@style/CoordinatorDefault"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        style="@style/AppBarCollapsing"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/CollapsingDefault"
            app:contentScrim="@color/black_60"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ConstraintDefault"
                android:layout_height="@dimen/dimens_280dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_slider"
                    style="@style/ViewPagerDefault"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ProgressBar
                    android:id="@+id/pb_slider_league"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_slider"
                style="@style/TabLayoutSlider"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/dimens_32dp"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:navigationIcon="@drawable/ic_back_white"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_logo"
        style="@style/FABDefault"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|left|end"
        app:borderWidth="@dimen/dimens_0dp"
        app:fabCustomSize="@dimen/dimens_100dp"
        app:maxImageSize="@dimen/dimens_64dp"
        android:layout_marginStart="@dimen/dimens_24dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/img_english_premier_league"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_twitter"
        style="@style/FABDefault"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="mini"
        app:borderWidth="@dimen/dimens_0dp"
        android:src="@drawable/ic_twitter"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginEnd="@dimen/dimens_24dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_facebook"
        style="@style/FABDefault"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="mini"
        app:borderWidth="@dimen/dimens_0dp"
        android:src="@drawable/ic_facebook"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginEnd="72dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_website"
        style="@style/FABDefault"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="mini"
        app:borderWidth="@dimen/dimens_0dp"
        android:scaleType="center"
        android:src="@drawable/ic_internet"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginEnd="@dimen/dimens_120dp"/>
    <androidx.core.widget.NestedScrollView
        style="@style/NestedScrollDefault"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            style="@style/LinearVerticalWrap">
            <ProgressBar
                android:id="@+id/pb_detail_league"
                style="?android:progressBarStyleHorizontal"
                android:indeterminate="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="gone"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_content"
                style="@style/ConstraintDefault">
                <TextView
                    android:id="@+id/tv_title_league"
                    style="@style/TextBoldSuperExtraBig"
                    android:layout_width="@dimen/dimens_0dp"
                    android:text="@string/app_name"
                    android:layout_marginTop="@dimen/dimens_80dp"
                    android:layout_marginStart="@dimen/dimens_24dp"
                    android:layout_marginEnd="@dimen/dimens_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_desc_league"
                    style="@style/TextRegularSmall"
                    android:layout_width="@dimen/dimens_0dp"
                    android:layout_marginStart="@dimen/dimens_24dp"
                    android:layout_marginEnd="@dimen/dimens_24dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:layout_marginBottom="@dimen/dimens_20dp"
                    android:text="@string/app_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_league"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>