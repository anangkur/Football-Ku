<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    style="@style/ConstraintWrapHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dimens_10dp">
    <ImageView
        android:id="@+id/iv_league"
        style="@style/ImageViewLeague"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_league"
        style="@style/CardWrapHeight"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:foreground="?selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="@dimen/dimens_20dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            style="@style/LinearVerticalWrap"
            android:layout_marginTop="@dimen/dimens_40dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp">
            <TextView
                android:id="@+id/tv_title_league"
                style="@style/TextBoldBig"
                android:text="@string/app_name"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_desc_league"
                style="@style/TextRegularSmall"
                android:text="@string/app_name"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>