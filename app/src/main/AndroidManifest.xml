<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anangkur.footbalku">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_football_ball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_football_ball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.anangkur.footbalku.feature.teamDetail.TeamDetailActivity"></activity>
        <activity android:name="com.anangkur.footbalku.feature.favourite.FavouriteActivity" />
        <activity android:name="com.anangkur.footbalku.feature.matchSearch.SearchActivity" />
        <activity android:name="com.anangkur.footbalku.feature.matchDetail.MatchDetailActivity" />
        <activity android:name="com.anangkur.footbalku.feature.leagueDetail.LeagueDetailActivity" />
        <activity android:name="com.anangkur.footbalku.feature.league.LeagueActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>